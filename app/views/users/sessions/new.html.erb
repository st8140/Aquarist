<div class="container device">
  <div class="device-form">
    <h2 class="my-4">ログイン</h2>

    <div class="device-inner">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-row mt-5">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control col-10 px-2", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
        <div class="field form-row">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control col-10 px-2", autocomplete: "current-password", placeholder: "パスワード"%>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインを記憶する, class: "remenber-me" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン", class: "form-control btn-primary mb-4" %>
        </div>
      <% end %>
        <%= link_to "アカウント登録", new_user_registration_path %>
        <br>
        <%= link_to "パスワードを忘れましたか？", new_user_password_path %> <!-- ()入れる -->
        <br>
      <div class="test-user-login border-top">
        <%= link_to "ログイン(テストユーザー)", users_guest_sign_in_path, method: :post, class: "form-control btn-primary my-4" %>
      </div>
    </div>
  </div>
</div>